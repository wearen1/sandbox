.add-spy
  &>i
    color theme-bg-color
    margin auto

.create-text
  margin-left 25px
  // margin-left calc(10% + 25px)
  color theme-bg-color
  font-size 14px

  position absolute
  top 50%
  transform translateY(-50%)

  &:after
    content 'Создать шпиона'

  .ready
    color red

  .ready &:after
    content 'Отмена'

  @media screen and (min-width: 750px)
    font-size 18px

  @media screen and (max-width: 750px)
    margin-left calc(10% + 20px)
    font-size 16px

  @media screen and (max-width: 600px)
    margin-left calc(10% + 15px)
    font-size 10px

#create-spy
  display block
  height 100%
  z-index 3
  opacity 0

  .back
    width 74px
    margin-left 18px
    cursor pointer
    color theme-bg-color
    font-size 18px
    user-select none

  .complete
    user-select none
    font-size 24px
    position relative
    width 220px
    height 50px
    color white
    border-radius 4px
    background-color rgb(39, 174, 96)

    &:hover
      background-color darken(rgb(39, 174, 96), 10%)

    &>div
      position relative

    i
      font-size 24px !important
      margin-top 2px
      margin-right 4px

  .configure-page
    .items
      width 400px

    .item
      width 100%

  .items
    display inline-block

    .item
      -webkit-filter grayscale(1)
      font-size 18px
      cursor pointer

      .webpage
        background-image: url(/img/webpage-icon.png)
        // margin-left 20px
        margin-top 10px
        width 180px
        height 180px
        background-size cover

      .webelement
        background-image: url(/img/webelement-icon.png)
        margin-left 20px
        margin-top 10px
        width 180px
        height 180px
        background-size cover

      .spy-interval
        select
          outline none
          background none
          border none
          box-shadow none

      .spy-url
        // border-bottom 1px solid #e5e5e5
        // padding-bottom 1px
        float left
        width 100%

        input
          text-align right
          color #565656
          border none
          width 200px
          outline none
          font-style normal
          margin-left 10px
          border-radius 4px

          &:focus
            color black

      &.active
        -webkit-filter none

      &:hover
        -webkit-filter none

  .items-desc
    font-size 20px
    margin-top 20px
    color #737373

  .next
    font-size 30px
    margin-top 30px
    color theme-bg-color
    width 120px
    cursor pointer

  &>div
    font-size 24px
