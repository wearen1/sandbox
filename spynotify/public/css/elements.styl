@import 'nib'

@require './global'
@require './logo'

body
  top 80px
  // z-index 0
  position relative

.spynotify-element
  border 2px dashed rgb(108, 40, 202);

.spynotify-panel
  font-family: 'Open Sans', sans-serif;
  border-bottom 2px solid #6C28CA
  position fixed
  z-index 9999999999
  height 80px
  top 0px
  left 0px
  width 100%
  box-shadow none
  background-color white

  .logo
    margin-left 20px
    margin-top 8px

  .indicator
    color: rgb(108, 40, 202);
    position: absolute;
    right: 0px;
    top: 0px;
    margin-top: -15px;
    margin-right: -15px;
    font-size: 18px;
    box-shadow: none;

  .selected
    // border-bottom: 1px solid #ccc;
    margin-left: 300px;
    position: absolute;
    height: 40px;
    width: 100px;
    background-color: white;
    box-shadow: none;

    &>input
      box-shadow none
      border none
      outline none
      font-size: 16px;
      width: 200px;
      font-family: 'Open Sans', sans-serif;
      box-shadow: none;
      border-style: none none solid;
      border-bottom-width: 1px;
      border-bottom-color: rgb(204, 204, 204);
      font-weight: lighter;

  .complete
    user-select none
    font-size 24px
    position relative
    width 220px
    height 50px
    color white
    border-radius 4px
    background-color rgb(39, 174, 96)

  .complete
    cursor pointer
    margin-right 20px
    font-size 18px
    height 40px
    width 100px
    text-align center

    &>div
      position relative

